						img: 's-2.png',
						name: 'Кофейный автомат CONCERTO TOUCH LB',
						price: '532 904,32'
					})
					+b-search({
						img: 's-3.png',
						name: 'Кофейный автомат OPERA',
						del: 'Под заказ'
					})
					+b-search({
						img: 's-4.png',
						name: 'SNAKKY LX 6-30 Б/У',
						price: '532 904,32'
					})
					+b-search({
						img: 's-5.png',
						name: 'Кофейный автомат OPERA',
						price: '532 904,32'
					})
					+b-search({
						img: 's-6.png',
						name: 'SNAKKY LX 6-30 Б/У',
						del: 'Под заказ'
					})
					+b-search({
						img: 's-7.png',
						name: 'Кофейный автомат CONCERTO TOUCH LB',
						price: '553 144,48'
					})
				+pagination()


mixin header-search()
	form.header__search.js-search-unit(action="#" name="form-search")
		+form-field({
			input: true,
			label: 'Я ИЩУ...',
			type: 'search',
			name: 'search',
			msg: '',
			req: true,
			cl: 'js-open-search'
		}).form-field--search
		.header__search-buttons
			button.btn.btn--blue.btn--icon.header__search-btn(type="submit")
				+svg('search')(width="24" height="24")
			button.btn.btn--blue.btn--icon.header__search-btn.header__search-btn-hide.js-close-search(type="submit")
				+svg('close')(width="17" height="17")
